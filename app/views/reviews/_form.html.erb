<div class="container py-5">
  <h3 class="text-center">New Review for <br>
    <%= @booking.chef.name %></h3>
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-md-3">
      <div class="form-container ">
        <%= simple_form_for [@booking.chef, @booking, @review] do |f| %>
          <%= f.input :rating %>
          <%= f.input :content %>
          <%= f.submit class: 'btn btn-ghost' %>
        <% end %>
    <%# <%= link_to '< Back', booking_path(@booking) %>
</div>
