<div class="row" style="margin-left: 100px; margin-top: 50px;" >
  <%= link_to '< Back to Chef', chef_path(@booking.chef), :style=>"color: #476072;"%>
</div>

<div class='container'>
    <div class="container p-3 d-flex">
      <div class="container p-3 pl-7" style="max-width: 25%; justify-content: right; display: flex;">
      <div style="height: 150px; width:150px; border-radius: 50%; overflow:hidden">
        <img src=<%= @booking.chef.photo %> style="height: 100%; width: 100%; object-fit: cover">
      </div>
      </div>
      <div class="container p-3">
        <h3>Booking with: <br>
        <%= @booking.chef.name %></h3><br>
        <p><strong>From</strong>: <%= @booking.start_time.strftime("%l:%M %p on the #{@booking.start_time.day.ordinalize} of %B") %></p>
        <p><strong>To</strong>: <%= @booking.end_time.strftime("%l:%M %p on the #{@booking.end_time.day.ordinalize} of %B") %></p>
        <% if @booking.chef.name == "Remi the Rat"%>
          <p><strong>Total Cost</strong>: <%= (@booking.chef.price*((@booking.end_time - @booking.start_time)/3600)).to_i %> Pieces of Cheese </p>
        <% else %>
          <p><strong>Total Cost</strong>: $<%= (@booking.chef.price*((@booking.end_time - @booking.start_time)/3600)) %>0 </p>
        <% end %>
      </div>
      <div class="container p-3" style="align-items: center; justify-content: left; display: flex;">
        <a href="<%=  new_chef_booking_review_path(@booking.chef, @booking) %>" class="btn btn-ghost" style="height: 40px;">Add review</a>
      </div>
    </div>
    <div>
    <%= link_to 'Delete Booking', booking_path(@booking), method: :delete, data: { confirm: "Are you sure you want to remove your booking?"} ,class: "btn btn-ghost px-2 mx-auto", style:"width: 130px;" %>
    </div>
  </div>
